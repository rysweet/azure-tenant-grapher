{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "uv",
			"args": [
				"sync"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Start Neo4j Container",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"python",
				"azure_tenant_grapher.py",
				"--tenant-id",
				"dummy",
				"--container-only"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Stop Neo4j Container",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"down"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Azure Tenant Grapher",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"python",
				"azure_tenant_grapher.py",
				"--tenant-id",
				"${input:tenantId}"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "tenantId",
			"description": "Azure Tenant ID",
			"default": "",
			"type": "promptString"
		}
	]
}