# Azure Tenant Grapher SPA - Environment Configuration

# ==================== Backend Server Configuration ====================

# Backend server port (Electron mode)
BACKEND_PORT=3001

# ==================== Web Server Configuration ====================

# Web server port (Web mode)
WEB_SERVER_PORT=3000

# Web server host binding
# - 0.0.0.0: Listen on all network interfaces (accessible from other machines)
# - 127.0.0.1 or localhost: Listen only on local machine
WEB_SERVER_HOST=0.0.0.0

# Enable CORS for cross-origin requests
ENABLE_CORS=true

# Allowed origins for CORS (comma-separated)
# Examples:
#   - * (allow all - less secure)
#   - http://localhost:3000,http://10.0.0.5:3000
#   - http://192.168.1.10:3000
ALLOWED_ORIGINS=*

# Enable authentication middleware (recommended for production)
ENABLE_AUTH=false

# ==================== Neo4j Configuration ====================

# Neo4j connection URI
NEO4J_URI=bolt://localhost:7687

# Neo4j port
NEO4J_PORT=7687

# Neo4j username
NEO4J_USER=neo4j

# Neo4j password (required)
NEO4J_PASSWORD=REPLACE_WITH_YOUR_PASSWORD

# ==================== Azure Configuration ====================

# Azure tenant ID
AZURE_TENANT_ID=

# Azure client ID (service principal)
AZURE_CLIENT_ID=

# Azure client secret (service principal)
AZURE_CLIENT_SECRET=

# ==================== Azure OpenAI Configuration (Optional) ====================

# Azure OpenAI endpoint
AZURE_OPENAI_ENDPOINT=

# Azure OpenAI API key
AZURE_OPENAI_KEY=

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure OpenAI chat model deployment name
AZURE_OPENAI_MODEL_CHAT=

# Azure OpenAI reasoning model deployment name
AZURE_OPENAI_MODEL_REASONING=

# ==================== Application Configuration ====================

# Node environment (development/production)
NODE_ENV=development

# Log level (debug/info/warn/error)
LOG_LEVEL=info

# Resource limit for scanning (optional)
RESOURCE_LIMIT=

# UV Python package manager path (optional)
UV_PATH=uv

# ==================== Development Configuration ====================

# Vite dev server port
VITE_PORT=5173
