{
  "name": "Azure Tenant Grapher Dev Container",
  "hostRequirements": {
    "cpus": 16,
    "memory": "32gb",
    "storage": "128gb"
  },
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt -r requirements-dev.txt || true && cd dotnet && dotnet restore || true",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [7474, 7687],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "remoteUser": "vscode"
}
